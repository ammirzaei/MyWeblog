<form class="form-signin text-center" action="/login" method="post">
  <img class="mb-4" src="/img/blogger.png" alt="" width="72" height="72" />
  <h1 class="h3 mb-3 font-weight-normal">ورود</h1>
  <%- include('../includes/loginMessages.ejs') %> 
  <label for="inputEmail" class="sr-only">ایمیل</label>
  <input
    type="email"
    id="inputEmail"
    name="email"
    class="form-control mb-2"
    placeholder="ایمیل"
    required
    autofocus
  />
  <label for="inputPassword" class="sr-only">رمز عبور</label>
  <input
    type="password"
    id="inputPassword"
    name="password"
    class="form-control mb-2"
    placeholder="رمز عبور"
    required
  />
  <div class="checkbox mb-3">
    <label>
      <input type="checkbox" name="remember" value="remember-me" /> مرا به خاطر بسپار
    </label>
  </div>
  <button class="btn btn-lg btn-primary btn-block" type="submit">ورود</button>
</form>
