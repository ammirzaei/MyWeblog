<div class="row">
    <div class="col-lg-12">
        <!-- Post content-->
        <article>
            <!-- Post header-->
            <header class="mb-4">
                <!-- Post title-->
                <h1 class="fw-bolder mb-1"><%= blog.title %> </h1>
                <!-- Post meta content-->
                <div class="text-muted fst-italic mb-2">پست شده در تاریخ <%= formatDate(blog.createdAt) %> </div>
                <!-- Post categories-->
                <a class="badge bg-secondary text-decoration-none link-light text-white" href="#"><%= blog.user.fullName %> </a>
                <a class="badge bg-secondary text-decoration-none link-light text-white" href="#">Nodejs</a>
                <a class="badge bg-secondary text-decoration-none link-light text-white" href="#">Expressjs</a>
            </header>
            <!-- Preview image figure-->
            <figure class="mb-2"><img class="img-fluid rounded" src="https://dummyimage.com/900x400/ced4da/6c757d.jpg" alt="<%= blog.title %> "></figure>
            <div class="text-muted fst-italic mb-4">نوشته شده توسط <%= blog.user.fullName %> </div>
            <!-- Post content-->
            <section class="mb-4">
                <%= blog.shortDescription %> 
             </section>
            <section class="mb-5">
               <%- blog.body %> 
            </section>
        </article>
        <!-- Comments section-->
      
    </div>
</div>